<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <title>Hello, world!</title>
        <style>
.shadow-hover:hover {
    transition: all 0.1s ease;
    box-shadow:0 .5rem 1rem rgba(0,0,0,.15)!important
}
.shadow-hover {
    -webkit-transition: all 0.1s ease;
    -moz-transition: all 0.1s ease;
    -o-transition: all 0.1s ease;
    transition: all 0.1s ease;
    box-shadow:0 .125rem .25rem rgba(0,0,0,.075)!important
}

.task-success {
    background-color: #a6e9d5!important;
    border-color: #198754 !important;
}

.task-failed {
    background-color: #f8d7da !important;
    border-color: #dc3545 !important;
}

.task-checking {
    border-color: #0d6efd !important;
    background-color:#cfe2ff!important;
}

.task-assigned {
    background-color: #f8f9fa !important;
}
        </style>
    </head>
    <body>
        <div class="container p-2 my-2">
            <h1 class="display-2">Deadlines</h1>
        </div>

        {{ if .Scores }}
            {{ range .Scores.Groups }}
                <div class="container p-2 my-2">
                    <div class="p-2">
                        <h1>{{ .PrettyTitle }} <span class="text-muted">{{ .Deadline.String }}</span></h1>
                    </div>
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4 text-center">
                        {{ range .Tasks }}
                            <div class="col">
                                <a href="{{ .TaskUrl }}" class="text-decoration-none text-dark">
                                    <div class="card h-100 task-{{ .Status }} shadow-hover">
                                        <div class="card-body">
                                            <h3 class="card-title text-nowrap text-dark">{{ .Task }}</h3>
                                            {{ if .PipelineUrl }}
                                                <a href="{{ .PipelineUrl }}" class="text-decoration-none">
                                            {{ end }}
                                                <p class="card-text fs-1 text-decoration-none text-dark">
                                                    {{.Score}} / {{.MaxScore}}
                                                </p>
                                            {{ if .PipelineUrl }}
                                                </a>
                                            {{ end }}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {{ end }}
                    </div>

                    <div class="p-2">
                        <h1>Total score: {{ .Score }} / {{ .MaxScore }}</h1>
                    </div>
                </div>
            {{ end }}
        {{ end}}
    </body>
</html>
